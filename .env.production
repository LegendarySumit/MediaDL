# ==============================================
# ðŸš€ PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this to .env and fill in your values
# NEVER commit the .env file to git!

# ==============================================
# DEPLOYMENT SETTINGS
# ==============================================
ENV=production

# ==============================================
# SERVER CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=false

# Your domain name (required for SSL)
DOMAIN=your-domain.com

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# For production, use a real Redis instance
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-secure-redis-password  # Uncomment and set if Redis has auth

# ==============================================
# DOWNLOAD CONFIGURATION
# ==============================================
DOWNLOAD_DIR=./downloads
MAX_DOWNLOAD_AGE_DAYS=7
MAX_DOWNLOAD_SIZE_GB=50
CLEANUP_INTERVAL_HOURS=24

# ==============================================
# RATE LIMITING (Backend Level)
# ==============================================
# Note: Nginx also has rate limiting configured
RATE_LIMIT_ENABLED=true
VIDEO_REQUESTS_PER_MINUTE=5
AUDIO_REQUESTS_PER_MINUTE=10
DOWNLOAD_REQUESTS_PER_MINUTE=15

# ==============================================
# SECURITY
# ==============================================
# Allowed CORS origins (comma-separated)
# Example: https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=https://your-domain.com

# Secret key for session management (generate a random string)
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_AT_LEAST_32_CHARS

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# ==============================================
# YT-DLP CONFIGURATION
# ==============================================
YTDLP_TIMEOUT=3600
YTDLP_RETRIES=3

# ==============================================
# OPTIONAL: RECAPTCHA (For spam protection)
# ==============================================
# Get keys from: https://www.google.com/recaptcha/admin
# RECAPTCHA_SITE_KEY=your-site-key-here
# RECAPTCHA_SECRET_KEY=your-secret-key-here
# RECAPTCHA_ENABLED=false

# ==============================================
# OPTIONAL: MONITORING & ALERTS
# ==============================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email alerts (for critical errors)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=admin@your-domain.com

# ==============================================
# OPTIONAL: ANALYTICS
# ==============================================
# Google Analytics
# GA_TRACKING_ID=G-XXXXXXXXXX

# ==============================================
# HEALTH CHECK SETTINGS
# ==============================================
MIN_DISK_SPACE_GB=10
HEALTH_CHECK_INTERVAL=60

# ==============================================
# JOB MANAGEMENT
# ==============================================
JOB_TIMEOUT_MINUTES=120
JOB_HISTORY_LIMIT=1000
MAX_CONCURRENT_DOWNLOADS=3
MAX_QUEUE_SIZE=100
