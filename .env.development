# ==============================================
# ðŸ”§ DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================
# Use this for local development

ENV=development

# ==============================================
# SERVER CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# For development, fakeredis is used automatically if Redis is not available
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
USE_FAKEREDIS=true

# ==============================================
# DOWNLOAD CONFIGURATION
# ==============================================
DOWNLOAD_DIR=./downloads
MAX_DOWNLOAD_AGE_DAYS=1
MAX_DOWNLOAD_SIZE_GB=10
CLEANUP_INTERVAL_HOURS=6

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=false
VIDEO_REQUESTS_PER_MINUTE=100
AUDIO_REQUESTS_PER_MINUTE=100
DOWNLOAD_REQUESTS_PER_MINUTE=100

# ==============================================
# SECURITY
# ==============================================
CORS_ORIGINS=*
SECRET_KEY=dev-secret-key-not-for-production

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=DEBUG
LOG_FILE=./logs/app.log

# ==============================================
# YT-DLP CONFIGURATION
# ==============================================
YTDLP_TIMEOUT=3600
YTDLP_RETRIES=3

# ==============================================
# OPTIONAL: RECAPTCHA (Disabled for dev)
# ==============================================
RECAPTCHA_ENABLED=false
