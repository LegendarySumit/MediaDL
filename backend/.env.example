# Media Downloader Configuration
# Copy this file to .env and edit values as needed

# Download Settings
DOWNLOAD_DIR=./backend/downloads
MAX_DOWNLOAD_SIZE_GB=50
VIDEO_QUALITY=720
AUDIO_QUALITY=192

# Concurrency (System Safety)
MAX_CONCURRENT_DOWNLOADS=2
MAX_QUEUE_SIZE=50

# Cleanup (Disk Management)
CLEANUP_DAYS=7
CLEANUP_MIN_DISK_SPACE_GB=5
AUTO_CLEANUP_ON_STARTUP=true

# Retry (Robustness)
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Health Checks
MIN_DISK_SPACE_GB=1
HEALTH_CHECK_INTERVAL=60

# Logging
LOG_DIR=./backend/logs
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
CORS_ORIGINS=*

# Job Management
JOB_TIMEOUT_MINUTES=120
JOB_HISTORY_LIMIT=500
